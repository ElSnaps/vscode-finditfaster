{
  "name": "vscode-ripgrep",
  "displayName": "vscode-ripgrep",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscode-ripgrep.shellThing",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-ripgrep.shellThing",
        "title": "shellThing"
      }
    ],
    "keybindings": [
      {
        "command": "vscode-ripgrep.shellThing",
        "key": "cmd+shift+j"
      }
    ],
    "configuration": {
      "title": "⚡ RIPPIT! ⚡",
      "properties": {
        "vscode-ripgrep.general.VS Code Path": {
          "markdownDescription": "Unfortunately, we need this for various reasons, and we can't automatically read it.",
          "type": "string",
          "default": "/Applications/Visual Studio Code.app"
        },
        "vscode-ripgrep.general.maximizeTerminal": {
          "description": "Maximize the terminal area when searching",
          "type": "boolean",
          "default": false
        },
        "vscode-ripgrep.general.showPreview": {
          "description": "show a preview when using FZF",
          "type": "boolean",
          "default": true
        },
        "vscode-ripgrep.advanced.previewCommand": {
          "markdownDescription": "Command that is used by `fzf` to produce the preview. Recommendation: install `bat` and have code highlighting!",
          "type": "string",
          "default": "bat --force-colorization --plain {}"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}